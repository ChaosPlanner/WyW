<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ergebnisse"
    android:orientation="vertical">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_start"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:background="@color/backround_text">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="43sp"
            android:textStyle="bold"
            android:layout_marginVertical="5dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laenge"
            android:layout_marginVertical="5dp"
            >
        </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zeit"
                android:layout_marginVertical="5dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO2-Verbrauch"
                android:layout_marginVertical="5dp"
                >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">

            <Button
                android:id="@+id/btn_aendern_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:text="Auto"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp">
            </Button>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/auto1">

            </View>
            <TextView
                android:id="@+id/txt_laenge_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 km 250m"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp"
                >
            </TextView>

            <TextView
                android:id="@+id/txt_zeit_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 min"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp">
            </TextView>

            <TextView
                android:id="@+id/co2_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,31 kg"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">

            <Button
                android:id="@+id/btn_aendern_fahrrad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:text="Fahrrad"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp">
            </Button>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/fahrrad1">

            </View>

            <TextView
                android:id="@+id/txt_laenge_fahrrad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1km 100m"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp">
            </TextView>

            <TextView
                android:id="@+id/txt_zeit_fahrrad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 min"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp">
            </TextView>

            <TextView
                android:id="@+id/co2_fahrrad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">

            <Button
                android:id="@+id/btn_aendern_fuss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:text="Fuss"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp">
            </Button>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/fuss1">

            </View>

            <TextView
                android:id="@+id/txt_laenge_fuss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 km"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp">
            </TextView>

            <TextView
                android:id="@+id/txt_zeit_fuss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 min"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp">
            </TextView>

            <TextView
                android:id="@+id/co2_fuss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="5dp">
            </TextView>

        </LinearLayout>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>